<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center">

    <TextView
        android:id="@+id/select_area_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_area"
        android:padding="24dp" />

    <Button
        android:id="@+id/service_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_text"/>

    <Button
        android:id="@+id/kitchen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kitchen_text"/>

    <Button
        android:id="@+id/prep_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prep_text"/>

</LinearLayout>